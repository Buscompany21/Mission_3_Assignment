@{
    ViewData["Title"] = "Calculator";
}
@model CalculatorModel

<h2>Grade Calculator</h2>
<p>Enter % scored for each grade category</p>
<form method="post">
    <div class="form-group">
        <label>Assignments:</label>
        <input id="txtAssignments" type="number" asp-for="Assignments" max="100" min="1" required/>
    </div>

    <div class="form-group">
        <label>Group Projects:</label>
        <input id="txtProjects" type="number" asp-for="Projects" max="100" min="1" required/>
    </div>

    <div class="form-group">
        <label>Quizzes:</label>
        <input id="txtQuizzes" type="number" asp-for="Quizzes" max="100" min="1" required/>
    </div>

    <div class="form-group">
        <label>Exams:</label>
        <input id="txtExams" type="number" asp-for="Exams" max="100" min="1" required/>
    </div>

    <div class="form-group">
        <label>INTEX:</label>
        <input id="txtIntex" type="number" asp-for="Intex" max="100" min="1" required/>
    </div>

    <input id="btnSend" type="submit" class="btn btn-primary" value="Send Message" />
</form>

<script src="~/js/calculate.js" asp-append-version="true"></script>